<?xml version="1.0" encoding="UTF-8"?>
<libosinfo version="0.0.1">
<!-- Licensed under the GNU General Public License version 2 or later.
     See http://www.gnu.org/licenses/ for a copy of the license text -->
  <os id="http://alpinelinux.org/alpinelinux/3.15">
    <short-id>alpinelinux3.15</short-id>
    <name>Alpine Linux 3.15</name>
    <version>3.15</version>
    <vendor>Alpine Linux Project</vendor>
    <family>linux</family>
    <distro>alpinelinux</distro>
    <upgrades id="http://alpinelinux.org/alpinelinux/3.14"/>
    <derives-from id="http://alpinelinux.org/alpinelinux/3.14"/>

    <release-date>2021-12-01</release-date>
    <eol-date>2023-11-01</eol-date>

    <resources arch="all">
      <minimum>
        <cpu>1000000000</cpu>
        <n-cpus>1</n-cpus>
        <ram>134217728</ram>
        <storage>1073741824</storage>
      </minimum>
      <recommended>
        <cpu>1000000000</cpu>
        <n-cpus>1</n-cpus>
        <ram>805306368</ram>
        <storage>4294967296</storage>
      </recommended>
    </resources>

    <variant id="standard">
      <name>Alpinelinux 3.15 Standard</name>
    </variant>
    <variant id="extended">
      <name>Alpinelinux 3.15 Extended</name>
    </variant>
    <variant id="virtual">
      <name>Alpinelinux 3.15 Virtual</name>
    </variant>
    <variant id="xen">
      <name>Alpinelinux 3.15 Xen</name>
    </variant>

    <!-- Standard Installer !-->
    <media arch="aarch64">
      <variant id="standard"/>
      <iso>
        <volume-id>alpine-std 3\.15.* aarch64$</volume-id>
      </iso>
    </media>
    <media arch="i686">
      <variant id="standard"/>
      <iso>
        <volume-id>alpine-std 3\.15.* x86$</volume-id>
      </iso>
    </media>
    <media arch="x86_64">
      <variant id="standard"/>
      <iso>
        <volume-id>alpine-std 3\.15.* x86_64$</volume-id>
      </iso>
    </media>
    <media arch="ppc64le">
      <variant id="standard"/>
      <iso>
        <volume-id>alpine-std 3\.15.* ppc64le$</volume-id>
      </iso>
    </media>
    <media arch="s390x">
      <variant id="standard"/>
      <iso>
        <volume-id>alpine-std 3\.15.* s390x$</volume-id>
      </iso>
    </media>

    <!-- Extended Installer !-->
    <media arch="i686">
      <variant id="extended"/>
      <iso>
        <volume-id>alpine-ext 3\.15.* x86$</volume-id>
      </iso>
    </media>
    <media arch="x86_64">
      <variant id="extended"/>
      <iso>
        <volume-id>alpine-ext 3\.15.* x86_64$</volume-id>
      </iso>
    </media>

    <!-- Virtual Installer !-->
    <media arch="aarch64">
      <variant id="virtual"/>
      <iso>
        <volume-id>alpine-virt 3\.15.* aarch64$</volume-id>
      </iso>
    </media>
    <media arch="i686">
      <variant id="virtual"/>
      <iso>
        <volume-id>alpine-virt 3\.15.* x86$</volume-id>
      </iso>
    </media>
    <media arch="x86_64">
      <variant id="virtual"/>
      <iso>
        <volume-id>alpine-virt 3\.15.* x86_64$</volume-id>
      </iso>
    </media>
    <media arch="armv7l">
      <variant id="virtual"/>
      <iso>
        <volume-id>alpine-virt 3\.15.* armv7$</volume-id>
      </iso>
    </media>

    <!-- Xen Installer !-->
    <media arch="x86_64">
      <variant id="xen"/>
      <iso>
        <volume-id>alpine-xen 3\.15.* x86_64$</volume-id>
      </iso>
    </media>
  </os>
</libosinfo>
